
<!DOCTYPE html>
<html lang="en">
<%- include("../header"); %>
<body>
<%- include("../menu"); %>

<input id="alert", type="hidden", value=<%=alert %>> </input>
<button type="button" class="btn btn-primary" onclick="location.href='/api/lobby/new'">방 개설</button>
<button id="refresh" type="button" class="btn btn-primary" onclick="location.href='/api/lobby'">방 목록 갱신</button>

<div class="row row-cols-1 row-cols-md-5">
  <% result.forEach(lobby => { %>
    <div class="col mb-4">
      <!-- Card -->
      <div class="card">
    
        <!--Card image-->
        <div class="view overlay">
          <img class="card-img-top" src="../images/paduk1.jpg"
            alt="Card image cap">
          <a href="/api/lobby/<%=lobby._id%>">
            <div class="mask rgba-white-slight"></div>
          </a>
        </div>
    
        <!--Card content-->
        <div class="card-body">

          <!--Title-->
          <h4 class="card-title"><%=lobby.title%></h4>
          <!--Text-->
          <p class="card-text">방 개설자: <%=lobby.creator%></p>
          <!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
          <button type="button" class="btn btn-light-green btn-md"
          onclick="location.href='/api/lobby/<%=lobby._id%>'"
          >
            방 입장</button>
    
        </div>

      </div>
    </div>
  <% }); %>
</div>

<%- include("../footer"); %>
<script>
  const aa = $("#alert").val()
  if (aa == "true") {
    alert("방이 존재하지 않거나 이미 게임이 시작되었습니다.");
    $("#refresh").click();
  }
</script>


</body>
</html>
