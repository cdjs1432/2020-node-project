
<!DOCTYPE html>
<html lang="en">
<%- include("../header"); %>
<body>
  <%- include("../menu"); %>
  <!-- Material input -->
<div class="md-form">
  <input
  type="text"
  id="singer"
  value="<%= result.singer %>"
  class="form-control"
  readonly>
  <label for="singer">Singer</label>
</div>

<div class="md-form">
  <input
  type="text"
  id="title"
  value="<%= result.title %>"
  class="form-control"
  readonly>
  <label for="title">Title</label>
</div>
<button type="button" class="btn btn-primary" onclick="location.href='./'">목록</button>
<button type="button" class="btn btn-primary" onclick="location.href='./<%= result._id%>/update'">수정</button>
<button id="deleteBtn" type="button" class="btn btn-primary">삭제</button>
  <%- include("../footer"); %>
  <script>
    $(function () {
      // 삭제
      $("#deleteBtn").on("click", () => {
        const result = confirm("삭제하시겠습니까??");
        if (result) {
          $.ajax({
            url: "/api/music/<%= result._id %>",
            type: "DELETE"
          }).done(() => {
            location.href = "/api/music"
          }).fail((request, status, error) => {
            alert(request.responseText);
          })
        } else {
          console.log("삭제 취소")
        }
      })
    })
  </script>
</body>
</html>
